
<div class="container">
<h1>All Cocktails</h1> <%= link_to "Create a new Cocktail", new_cocktail_path, class: "btn btn-primary mb-3 " %>
<ul class="p-0">
<% @cocktails.each do |cocktail| %>
<div class="card-trip mb-3">
  <img width="100px" src="https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1425&q=80" />
  <div class="card-trip-infos">
    <div>
      <%= link_to  cocktail.name, cocktail_path(cocktail), class: "btn btn-success" %>
    </div>
  </div>
</div>
<% end %>
<a href="" class="btn btn-danger">Go up again</a>
</ul>
</div>
